<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="10dp"
    android:layout_margin="@dimen/left_right_margin"
    android:background="@drawable/corners_shape_transparent_bg">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/listitem_sms_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="用户"
            android:textSize="15sp"
            android:layout_marginRight="@dimen/left_right_margin"/>
        <TextView
            android:id="@+id/listitem_sms_date"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="2019-12-19 15:07:00"/>
        <ImageView
            android:id="@+id/listitem_sms_choose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/circle_unchoose"/>
    </LinearLayout>
    <TextView
        android:id="@+id/listitem_sms_content"
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxLines="2"
        android:ellipsize="end"/>
</LinearLayout>