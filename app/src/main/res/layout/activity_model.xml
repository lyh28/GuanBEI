<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.ModelActivity">
    <LinearLayout
        android:layout_marginLeft="@dimen/page_left_right_margin"
        android:layout_marginRight="@dimen/page_left_right_margin"
        android:layout_width="match_parent"
        android:layout_height="@dimen/appbar_height">
        <ImageView
            android:id="@+id/activity_model_back"
            android:src="@drawable/back"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:text="模板管理"
            android:textSize="20sp"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_marginLeft="@dimen/page_left_right_margin"
        android:layout_marginRight="@dimen/page_left_right_margin"
        android:id="@+id/activity_model_recyclerview"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/colorGray"/>
    <TextView
        android:id="@+id/activity_model_new"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/page_left_right_margin"
        android:paddingBottom="@dimen/page_left_right_margin"
        android:text="新建模板"
        android:background="@color/colorWhite"
        android:gravity="center"
        android:textColor="@color/colorNormal"/>
</LinearLayout>