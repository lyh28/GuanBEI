<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="50dp" android:layout_height="50dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/corners_shape_floatingbtn">
    <com.lyh.guanbei.ui.widget.CircleBorder
        app:color="@color/colorGray"
        app:border_width="10"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/custom_float_circleborder"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="0"
        android:gravity="right|top"
        android:textStyle="bold"
        android:textSize="15sp"
        android:layout_margin="5dp"
        android:id="@+id/custom_float_amount"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="账单"
        android:gravity="center"
        android:id="@+id/custom_float_text"/>
</FrameLayout>