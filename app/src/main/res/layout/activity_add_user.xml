<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:fitsSystemWindows="true"
    tools:context=".ui.activity.AddUserActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginLeft="@dimen/page_left_right_margin"
        android:layout_marginRight="@dimen/page_left_right_margin"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/activity_add_user_close"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/close" />
        <TextView
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/page_left_right_margin"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:text="添加成员"
            android:textSize="20sp" />
        <ImageView
            android:id="@+id/activity_add_user_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:src="@drawable/done"/>
    </LinearLayout>
    <LinearLayout
        android:layout_marginRight="@dimen/page_left_right_margin"
        android:layout_marginLeft="@dimen/page_left_right_margin"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:background="@drawable/corners_shape_normal_border"
            android:padding="5dp"
            android:layout_marginRight="@dimen/page_left_right_margin"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:src="@drawable/search_24"/>
            <EditText
                android:id="@+id/activity_add_user_phone"
                android:inputType="number"
                android:layout_marginLeft="@dimen/left_right_margin"
                android:textSize="15sp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                style="@style/CustomEditTextStyle"
                android:hint="请输入用户ID或者手机号"/>
        </LinearLayout>
        <TextView
            android:id="@+id/activity_add_user_search"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="查找"
            android:textColor="@color/colorWhite"
            android:background="@drawable/corners_shape_normal_bg"
            android:padding="5dp"
            android:textSize="15sp"/>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/activity_add_user_recyclerview"/>
</LinearLayout>