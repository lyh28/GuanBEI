<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.activity.VerifyPwdActivity">
    <ImageView
        android:id="@+id/activity_unlock_icon"
        android:layout_width="@dimen/big_icon_size"
        android:layout_height="@dimen/big_icon_size"
        android:src="@drawable/defaulticon"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/activity_unlock_phone"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/activity_unlock_phone"
        android:layout_above="@id/activity_unlock_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="13925348678"/>
    <TextView
        android:visibility="gone"
        android:id="@+id/activity_unlock_tips"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="密码错误，还可以再输入4次"
        android:layout_centerHorizontal="true"
        android:layout_margin="15dp"
        android:textColor="@color/qmui_config_color_red"/>

</RelativeLayout>